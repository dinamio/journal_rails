<%if notice !=nil %>
<p id="notice" class="alert alert-success"><%= notice %></p>
<%end%>
<h1 class="page-header">Предметы</h1>

<div class="table-responsive">
<table class="table table-bordered table-hover table-striped">
  <thead>
    <tr>
      <th>Название</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.name %></td>
        <td><%= link_to 'Редактировать название', edit_subject_path(subject) %></td>
        <td><%= link_to 'Удалить', subject, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новый предмет', new_subject_path %>
