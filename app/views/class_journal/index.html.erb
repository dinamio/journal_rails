<div class="row">
<% @journals.each do |journal|%>
<div class="col-lg-3">
	<div class="panel panel-primary text-center" >
		<div class="panel-heading">
			<div class="row">
				<div class="huge"> <%=journal.form.name%></div>
				<div> <%=journal.subject.name%></div>
			</div>
		</div>
		<div class="panel-footer">
			 <%= link_to 'Детали', class_journal_path(journal) %>
			 <%= link_to 'Удалить', class_journal_path(journal), method: :delete, data: { confirm: 'Вы уверены, что хотите удалить журнал?'} %>
		</div>
	</div>
</div>
<%end%>
</div>